<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_curve"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim_13">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/dim_48"
        android:layout_height="@dimen/dim_48"
        android:layout_marginBottom="@dimen/dim_10"
        android:src="@drawable/ic_error_black_24dp"
        android:tint="@color/colorDimPrimary"
        android:visibility="visible"/>

    <com.govt_exam_preparation.custom_views.MyTextViewBold
        android:id="@+id/txtHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Header Title"
        android:textSize="@dimen/font_size_18"
        android:visibility="gone"/>

    <com.govt_exam_preparation.custom_views.MyTextViewRegular
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/checkConnection"
        android:textColor="@color/colorDimPrimary"
        android:textSize="@dimen/font_size_14"/>

    <com.govt_exam_preparation.custom_views.MyTextViewBold
        android:id="@+id/txtOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_8"
        android:background="@drawable/btn_selector_rounded_trans"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="OK"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_14"/>


</LinearLayout>