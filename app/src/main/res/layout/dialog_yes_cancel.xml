<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_curve"
    android:orientation="vertical"
    android:padding="@dimen/dim_12">


    <com.govt_exam_preparation.custom_views.MyTextViewBold
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Are you sure you want to log out?"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="@dimen/dim_5"
        android:orientation="horizontal">

        <com.govt_exam_preparation.custom_views.MyTextViewBold
            android:id="@+id/txtCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dim_10"
            android:background="@drawable/btn_selector_rounded_trans"
            android:padding="@dimen/dim_6"
            android:text="Cancel"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_13"/>

        <com.govt_exam_preparation.custom_views.MyTextViewBold
            android:id="@+id/txtYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_selector_rounded_trans"
            android:padding="@dimen/dim_6"
            android:text="Yes"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_13"/>

    </LinearLayout>


</LinearLayout>