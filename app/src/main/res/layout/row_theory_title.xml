<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_selector_trans_normal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dim_7"
    android:paddingRight="@dimen/dim_7"
    android:paddingTop="@dimen/dim_7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:minHeight="@dimen/dim_50"
        android:orientation="horizontal">

        <com.govt_exam_preparation.custom_views.MyTextViewRegular
            android:id="@+id/txtSerialNo"
            android:layout_width="@dimen/dim_40"
            android:layout_height="@dimen/dim_40"
            android:layout_gravity="center"
            android:background="@drawable/boundary_circle_grey"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/font_size_14"
            />

        <com.govt_exam_preparation.custom_views.MyTextViewRegular
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_7"
            android:text="Title"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_16"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_1"
        android:layout_below="@+id/txtTitle"
        android:layout_marginTop="@dimen/dim_7"
        android:background="@color/colorGrey"/>

</LinearLayout>