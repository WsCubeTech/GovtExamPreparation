<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:layout_marginTop="@dimen/dim_5"
        card_view:cardCornerRadius="@dimen/dim_3"
        card_view:cardElevation="@dimen/dim_2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_10">

            <ImageView
                android:id="@+id/notification_image"
                android:layout_width="@dimen/dim_55"
                android:layout_height="@dimen/dim_55"
                android:src="@drawable/ic_photo_gallery"
                android:layout_alignParentLeft="true"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_toRightOf="@+id/notification_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notification_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_2"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Title"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dim_14"/>

                <TextView
                    android:id="@+id/notification_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_3"
                    android:drawablePadding="@dimen/dim_5"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/dim_12"/>



            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>

