<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linParent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dim_300"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_white_curve"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dim_13"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.govt_exam_preparation.custom_views.MyTextViewRegular
        android:id="@+id/txtMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="A One Time Password (OTP) has been sent to your mobile number"
        android:textColor="@color/colorDimPrimary"
        android:textSize="@dimen/font_size_14"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inpOtp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        app:errorTextAppearance="@style/TextInputLayoutError"
        app:hintTextAppearance="@style/TextInputLayout">

        <EditText
            android:id="@+id/etOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter OTP"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_14"/>
    </android.support.design.widget.TextInputLayout>

    <com.govt_exam_preparation.custom_views.MyTextViewBold
        android:id="@+id/txtOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_10"
        android:background="@drawable/btn_selector_rounded_trans"
        android:gravity="center"
        android:padding="@dimen/dim_10"
        android:text="OK"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/font_size_16"/>


</LinearLayout>