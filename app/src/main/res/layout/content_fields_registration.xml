<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dim_7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_18"
            android:layout_height="@dimen/dim_18"
            android:layout_marginTop="@dimen/dim_17"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:tint="@color/colorPrimary"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_14"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:gravity="center"
        android:orientation="horizontal">

        <com.govt_exam_preparation.custom_views.MyTextViewBold
            android:id="@+id/Gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Gender"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_14"/>

        <RadioGroup
            android:id="@+id/radioGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_10"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Male"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/dim_12"/>

            <RadioButton
                android:id="@+id/radioFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_20"
                android:checked="false"
                android:text="Female"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_12"/>
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_18"
            android:layout_height="@dimen/dim_18"
            android:layout_marginTop="@dimen/dim_17"
            android:src="@drawable/ic_phone_android_black_24dp"
            android:tint="@color/colorPrimary"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:hint="Phone number"
                android:inputType="phone"
                android:maxLines="1"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_14"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_18"
            android:layout_height="@dimen/dim_18"
            android:layout_marginTop="@dimen/dim_17"
            android:src="@drawable/ic_email_black_24dp"
            android:tint="@color/colorPrimary"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_10"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_14"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dim_18"
            android:layout_height="@dimen/dim_18"
            android:layout_marginTop="@dimen/dim_17"
            android:src="@drawable/ic_location_on_black_24dp"
            android:tint="@color/colorPrimary"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            app:errorTextAppearance="@style/TextInputLayoutError"
            app:hintTextAppearance="@style/TextInputLayout">

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:maxLines="3"
                android:textColor="@color/colorDimPrimary"
                android:textSize="@dimen/font_size_14"/>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <include layout="@layout/content_city_exam_subject_selection"/>

    <include layout="@layout/content_coupon_code_registration"/>

</LinearLayout>