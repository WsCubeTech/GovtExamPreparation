<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_5"
        android:padding="@dimen/dim_5"
        card_view:cardElevation="@dimen/dim_3"
        card_view:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_marginTop="@dimen/dim_5">

            <ImageView
                android:id="@+id/coaching_center_image"
                android:layout_width="@dimen/dim_60"
                android:layout_height="@dimen/dim_60"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_photo_gallery"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_toRightOf="@+id/coaching_center_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/coaching_center_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/dim_3"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Center Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/dim_14"/>

                <TextView
                    android:id="@+id/center_contact_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dim_3"
                    android:drawableLeft="@drawable/ic_phone_blue_14"
                    android:drawablePadding="@dimen/dim_5"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Contact"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dim_12"/>


                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_10"
                    android:layout_marginTop="@dimen/dim_3"
                    android:drawableLeft="@drawable/location_pin"
                    android:drawablePadding="@dimen/dim_5"

                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dim_5"
                    android:paddingRight="@dimen/dim_5"
                    android:text="Address"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/dim_12"/>

            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
