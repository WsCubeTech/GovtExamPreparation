<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/dim_5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linHaveACoupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgCouponCheck"
            android:layout_width="@dimen/dim_24"
            android:layout_height="@dimen/dim_24"
            android:layout_gravity="center"
            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
            android:tint="@color/colorPrimary"/>

        <com.govt_exam_preparation.custom_views.MyTextViewRegular
            android:id="@+id/txtHaveACoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dim_10"
            android:text="Have a coupon?"
            android:textSize="@dimen/font_size_16"/>

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_promocode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dim_5"
        app:errorTextAppearance="@style/TextInputLayoutError"
        app:hintTextAppearance="@style/TextInputLayout">

        <EditText
            android:id="@+id/edtPromocode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Promo Code"
            android:maxLines="1"
            android:textColor="@color/colorDimPrimary"
            android:textSize="@dimen/font_size_14"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_40"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dim_15"
        android:background="@drawable/btn_selector_main"
        android:text="Register"
        android:textColor="#fff"
        android:textSize="@dimen/font_size_14"/>
</LinearLayout>