<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_5"
        android:layout_marginTop="@dimen/dim_5"
        card_view:cardCornerRadius="@dimen/dim_3"
        card_view:cardElevation="@dimen/dim_2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_5">

            <TextView
                android:id="@+id/exam_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/dim_3"
                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="Title"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/dim_12"/>

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dim_3"

                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="Post"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dim_10"/>


            <TextView
                android:id="@+id/last_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_3"
                android:drawableLeft="@drawable/calender_small"
                android:drawablePadding="@dimen/dim_5"

                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dim_5"
                android:paddingRight="@dimen/dim_5"
                android:text="March 12, 2016"
                android:textColor="@color/colorText"
                android:textSize="@dimen/dim_10"/>

        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>
